{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        // "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "composite": false
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}